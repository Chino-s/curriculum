<h2>会員ページ</h2>

<% if @users.present? %>
  <table class="list">
    <tr>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>性別</th>
      <th>生年月日</th>
    </tr>
    <% @users.each do |user|%>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.gender %></td>
        <td><%= user.birth_day %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>会員情報がありません。</p>
<% end %>
